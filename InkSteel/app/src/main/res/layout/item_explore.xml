<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="8dp"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="304dp"
            android:layout_height="308dp"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            card_view:layout_constraintBottom_toTopOf="@+id/user_name"
            card_view:layout_constraintDimensionRatio="w,4:3"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintHorizontal_weight="3"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0"
            card_view:srcCompat="@drawable/tatto1"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="cursive"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintHorizontal_bias="0.137"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toLeftOf="@+id/user_city"
            card_view:layout_constraintVertical_weight="2"
            tools:text="Username"/>

        <TextView
            android:id="@+id/user_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:fontFamily="cursive"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintVertical_weight="2"
            tools:text="UserCity"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>