<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#25ffffff"
    android:padding="8dp">

    <ImageView
        android:id="@+id/post_info_user_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/post_info_username"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:textColor="#afffffff"
        app:layout_constraintBottom_toBottomOf="@+id/post_info_user_picture"
        app:layout_constraintStart_toEndOf="@+id/post_info_user_picture"
        app:layout_constraintTop_toTopOf="@+id/post_info_user_picture"
        tools:text="TextView"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/post_info_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/cardview_shadow_start_color"
        android:gravity="center"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@android:color/white"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/post_info_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/post_info_username"
        app:layout_constraintTop_toTopOf="@+id/post_info_username"
        tools:text="TextView"/>

</android.support.constraint.ConstraintLayout>