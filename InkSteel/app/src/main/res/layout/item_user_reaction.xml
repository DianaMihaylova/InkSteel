<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/post_reaction_icon"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/post_reaction_text"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/devil"/>

    <TextView
        android:id="@+id/post_reaction_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/reacted_with"
        style="@style/Text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/post_reaction_icon"
        app:layout_constraintEnd_toStartOf="@+id/post_reaction_icon"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/post_reaction_user"
        app:layout_constraintTop_toTopOf="@+id/post_reaction_icon"/>

    <TextView
        android:id="@+id/post_reaction_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        style="@style/Text"
        android:textSize="12sp"
        android:text="@string/username"
        app:layout_constraintBottom_toBottomOf="@+id/post_reaction_icon"
        app:layout_constraintEnd_toStartOf="@+id/post_reaction_text"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/post_reaction_icon"/>
</android.support.constraint.ConstraintLayout>